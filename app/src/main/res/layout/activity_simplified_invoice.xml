<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

        tools:context=".MAnualReciept">

        <ImageView
            android:id="@+id/imgSimpDog"
            android:layout_width="100dp"
            android:layout_height="89dp"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/texteditdraw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:srcCompat="@drawable/dog"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:id="@+id/imgSimBag"
            android:layout_width="100dp"
            android:layout_height="89dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/texteditdraw"

            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toEndOf="@+id/imgSimpDog"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:srcCompat="@drawable/bag" />
        <ImageView
            android:id="@+id/imgSimPhone"
            android:layout_width="100dp"
            android:layout_height="89dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/texteditdraw"

            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toEndOf="@+id/imgSimBag"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:srcCompat="@drawable/phone" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etSimNote"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="309dp"
            android:layout_height="61dp"
            android:layout_marginTop="21dp"
            android:hint="Note"
            app:boxStrokeColor="@color/green"
            app:hintTextColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgSimPhone"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="text"
                android:maxLength="20"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etManPrice"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="309dp"
            android:layout_height="61dp"
            android:layout_marginTop="21dp"
            android:hint="Price"
            app:boxStrokeColor="@color/green"
            app:hintTextColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etManEnd"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etMAnTools"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="309dp"
            android:layout_height="61dp"
            android:layout_marginTop="21dp"
            android:hint="Tolls and Other"
            app:boxStrokeColor="@color/green"
            app:hintTextColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etManPrice"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etManEnd"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="309dp"
            android:layout_height="61dp"
            android:layout_marginTop="21dp"
            android:hint="End Location"
            app:boxStrokeColor="@color/green"
            app:hintTextColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etStarLoc"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etStarLoc"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="309dp"
            android:layout_height="61dp"
            android:layout_marginTop="21dp"
            android:hint="Start Location"

            app:boxStrokeColor="@color/green"
            app:hintTextColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etManName"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etManName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="309dp"
            android:layout_height="61dp"
            android:layout_marginTop="21dp"
            android:hint="Name"
            app:boxStrokeColor="@color/green"
            app:hintTextColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etManNIF"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etManNIF"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="309dp"
            android:layout_height="61dp"
            android:layout_marginTop="21dp"
            android:hint="NIF"

            app:boxStrokeColor="@color/green"
            app:hintTextColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text="Manual Invoice"
            android:textColor="@color/green"
            android:textSize="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplementary"
            android:textSize="24dp"
            app:layout_constraintHorizontal_bias="0.140"
            tools:layout_editor_absoluteX="337dp"
            tools:layout_editor_absoluteY="568dp"
            android:layout_marginTop="21dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etMAnTools"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/textTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textSize="18dp"
            app:layout_constraintHorizontal_bias="0.140"
            tools:layout_editor_absoluteX="337dp"
            tools:layout_editor_absoluteY="568dp"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="110dp"

            app:layout_constraintTop_toBottomOf="@+id/etSimNote"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            />
        <TextView
            android:id="@+id/MAntextGetTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="28dp"
            app:layout_constraintHorizontal_bias="0.140"
            tools:layout_editor_absoluteX="337dp"
            tools:layout_editor_absoluteY="568dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="70dp"
            app:layout_constraintTop_toBottomOf="@+id/etSimNote"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRecPrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonshapewhitebg"
            android:fontFamily="@font/calibri"
            android:gravity="center"
            android:text="Print"

            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="160dp"
            app:layout_constraintTop_toBottomOf="@+id/textTotal"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>